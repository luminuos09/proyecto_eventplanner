<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="presentacion.controllers.PublicarEventosController"
            style="-fx-background-color: #F5F5F5;">
    
    <!-- ENCABEZADO -->
    <top>
        <VBox alignment="CENTER" spacing="10" 
              style="-fx-background-color: linear-gradient(to bottom, #5B21B6, #7C3AED); -fx-padding: 30;">
            <Label text="ðŸš€ Publicar Eventos" 
                   style="-fx-text-fill: white; -fx-font-size: 36px; -fx-font-weight: bold;"/>
            <Label text="Cambia el estado de los eventos para hacerlos visibles" 
                   style="-fx-text-fill: #E9D5FF; -fx-font-size: 14px;"/>
        </VBox>
    </top>
    
    <!-- TABLA -->
    <center>
        <VBox spacing="20" style="-fx-padding: 30;">
            
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Eventos en BORRADOR" 
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #5B21B6;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Actualizar" 
                        onAction="#actualizar"
                        style="-fx-background-color: #7C3AED; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 15; -fx-background-radius: 8; -fx-cursor: hand;"/>
            </HBox>
            
            <TableView fx:id="tablaEventos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="250"/>
                    <TableColumn fx:id="colTipo" text="Tipo" prefWidth="120"/>
                    <TableColumn fx:id="colFecha" text="Fecha" prefWidth="150"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                    <TableColumn fx:id="colAcciones" text="Acciones" prefWidth="260"/>
                </columns>
            </TableView>
            
        </VBox>
    </center>
    
    <!-- FOOTER -->
    <bottom>
        <HBox spacing="15" alignment="CENTER" 
              style="-fx-background-color: linear-gradient(to right, #7C3AED, #5B21B6); -fx-padding: 20;">
            <Button text="â¬… Volver" 
                    onAction="#volver"
                    style="-fx-background-color: white; -fx-text-fill: #5B21B6; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 20; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
    
</BorderPane>