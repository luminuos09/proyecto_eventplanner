                    <VBox spacing="8" HBox.hgrow="ALWAYS">
                        <Label text="Fecha y Hora de Inicio *" 
                               style="-fx-text-fill: #5B21B6; -fx-font-size: 14px; -fx-font-weight: bold;"/>
                        <DatePicker fx:id="dpFechaInicio" 
                                   promptText="Seleccione fecha"
                                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E0E0E0;"/>
                        <TextField fx:id="txtHoraInicio" 
                                  promptText="HH:mm (ej: 10:00)"
                                  style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #E0E0E0; -fx-padding: 12; -fx-font-size: 13px;"/>
