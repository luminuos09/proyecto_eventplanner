                </HBox>
                
                <!-- Organizador -->
                <VBox spacing="8">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Seleccionar Organizador *" 
                               style="-fx-text-fill: #5B21B6; -fx-font-size: 14px; -fx-font-weight: bold;"/>
