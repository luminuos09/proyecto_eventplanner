<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="presentacion.controllers.ReporteEventosController"
            fitToWidth="true"
            style="-fx-background: #f5f5f5;"
            prefWidth="900" 
            prefHeight="700">
    
    <VBox spacing="20" style="-fx-background-color: #f5f5f5;">
        
        <padding>
            <Insets top="20" right="30" bottom="20" left="30"/>
        </padding>
        
        <!-- HEADER -->
        <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to bottom, #1565C0, #1976D2); -fx-background-radius: 10;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <VBox alignment="CENTER" spacing="5">
                <Label text="游늵Reportes de Eventos" 
                       style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;"/>
                <Label text="An치lisis detallado de eventos y asistencia" 
                       style="-fx-text-fill: white; -fx-font-size: 14px;"/>
            </VBox>
        </HBox>
        
        <!-- OPCIONES DE REPORTES -->
        <GridPane hgap="20" vgap="20">
            
            <!-- Reporte de Asistencia -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3); -fx-cursor: hand; -fx-padding: 20;"
                  prefWidth="450" prefHeight="150"
                  onMouseClicked="#generarReporteAsistencia"
                  GridPane.rowIndex="0" GridPane.columnIndex="0">
                 <Label text="游늶Reporte de Asistencia" 
                       style="-fx-text-fill: #1565C0; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Ver detalles de asistencia de un evento espec칤fico" 
                       style="-fx-text-fill: #666666; -fx-font-size: 12px; -fx-text-alignment: center;" 
                       wrapText="true" 
                       maxWidth="400"/>
            </VBox>
            
            <!-- Comparar Eventos -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3); -fx-cursor: hand; -fx-padding: 20;"
                  prefWidth="450" prefHeight="150"
                  onMouseClicked="#compararEventos"
                  GridPane.rowIndex="0" GridPane.columnIndex="1">
                <Label text="游늵Comparar Eventos" 
                       style="-fx-text-fill: #FF9800; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Comparar asistencia entre dos eventos" 
                       style="-fx-text-fill: #666666; -fx-font-size: 12px; -fx-text-alignment: center;" 
                       wrapText="true" 
                       maxWidth="400"/>
            </VBox>
            
            <!-- An치lisis de Tendencias -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3); -fx-cursor: hand; -fx-padding: 20;"
                  prefWidth="450" prefHeight="150"
                  onMouseClicked="#analizarTendencias"
                  GridPane.rowIndex="1" GridPane.columnIndex="0">
                <Label text="游늳An치lisis de Tendencias" 
                       style="-fx-text-fill: #4CAF50; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Ver tendencias de participaci칩n por tipo de evento" 
                       style="-fx-text-fill: #666666; -fx-font-size: 12px; -fx-text-alignment: center;" 
                       wrapText="true" 
                       maxWidth="400"/>
            </VBox>
            
            <!-- Reporte por Organizador -->
            <VBox alignment="CENTER" spacing="15"
                  style="-fx-background-color: white; -fx-background-radius: 15; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 15, 0, 0, 3); -fx-cursor: hand; -fx-padding: 20;"
                  prefWidth="450" prefHeight="150"
                  onMouseClicked="#reportePorOrganizador"
                  GridPane.rowIndex="1" GridPane.columnIndex="1">
                <Label text="游녻Reporte por Organizador" 
                       style="-fx-text-fill: #9C27B0; -fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label text="Ver todos los eventos de un organizador" 
                       style="-fx-text-fill: #666666; -fx-font-size: 12px; -fx-text-alignment: center;" 
                       wrapText="true" 
                       maxWidth="400"/>
            </VBox>
            
        </GridPane>
        
        <!-- 츼REA DE RESULTADOS -->
        <VBox spacing="10" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;">
            <Label text="游늯 Resultados" 
                   style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #1565C0;"/>
            <Separator/>
            
            <ScrollPane fitToWidth="true" prefHeight="300">
                <TextArea fx:id="txtResultados" 
                          editable="false" 
                          wrapText="true"
                          style="-fx-control-inner-background: #f5f5f5; -fx-font-family: 'Courier New'; -fx-font-size: 12px;"
                          promptText="Los reportes generados se mostrar치n aqu칤..."/>
            </ScrollPane>
            
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button text="游 Guardar Reporte" 
                        onAction="#guardarReporte"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;"/>
                
                <Button text="Limpiar" 
                        onAction="#limpiarResultados"
                        style="-fx-background-color: #757575; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 8 20;"/>
            </HBox>
        </VBox>
        
        <!-- BOT칍N VOLVER -->
        <HBox alignment="CENTER">
            <Button text="拘Volver a Men칰 de Reportes" 
                    onAction="#volver"
                    style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30;"
                    prefWidth="300"/>
        </HBox>
        
    </VBox>
    
</ScrollPane>
